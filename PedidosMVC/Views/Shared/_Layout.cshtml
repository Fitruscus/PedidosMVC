<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PedidosMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PedidosMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>
    <header class="super-header">
        <div class="header-content">
            <span class="logo">Súper Mercado "El Primo"</span>
            <button id="menuToggle" class="btn btn-menu">
                <i class="fa fa-bars"></i> MENÚ
            </button>
        </div>
    </header>
    <div class="main-container">
        <nav id="sidebar" class="sidebar">
            <ul class="sidebar-list">
                <li>
                    <a href="/Products/Index">
                        <i class="fa fa-shopping-basket"></i> Productos
                    </a>
                </li>
                <li>
                    <a href="/Users/Index">
                        <i class="fa fa-user"></i> Clientes
                    </a>
                </li>
                <li>
                    <a href="/Orders/Index">
                        <i class="fa fa-file-invoice"></i> Pedidos
                    </a>
                </li>
            </ul>
        </nav>
        <div class="content-area">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="super-footer">
        <div class="container text-center">
            Súper Mercado "El Primo" · 2025 · <a href="/Home/Privacy" style="color:#1abc9c;">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('menuToggle').onclick = function () {
            var sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('sidebar-hidden');
        };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>