@model IEnumerable<PedidosMVC.Models.Product>
@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<form method="get" class="mb-3">
    <div class="row align-items-end">
        <div class="col">
            <input type="text" name="filtroNombre" value="@ViewBag.FiltroNombre" class="form-control" placeholder="Buscar por nombre" />
        </div>
        <div class="col">
            <input type="text" name="filtroCategoria" value="@ViewBag.FiltroCategoria" class="form-control" placeholder="Buscar por categoría" />
        </div>
        <div class="col">
            <input type="number" name="filtroPrecioMin" value="@ViewBag.FiltroPrecioMin" class="form-control" placeholder="Precio mínimo" step="0.01" />
        </div>
        <div class="col">
            <input type="number" name="filtroPrecioMax" value="@ViewBag.FiltroPrecioMax" class="form-control" placeholder="Precio máximo" step="0.01" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary" title="Buscar">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</form>

<style>
    .action-btn {
        display: inline-block;
        width: 40px;
        height: 40px;
        border-radius: 8px;
        border: 2px solid transparent;
        background: #fff;
        text-align: center;
        vertical-align: middle;
        margin-right: 8px;
        transition: box-shadow 0.2s;
        padding: 0;
        line-height: 40px;
    }
    .action-edit {
        border-color: #1976d2;
        color: #1976d2;
    }
    .action-edit:hover {
        background: #e3f2fd;
    }
    .action-view {
        border-color: #00bcd4;
        color: #00bcd4;
    }
    .action-view:hover {
        background: #e0f7fa;
    }
    .action-delete {
        border-color: #d32f2f;
        color: #d32f2f;
    }
    .action-delete:hover {
        background: #ffebee;
    }
    .action-btn i {
        font-size: 1.3em;
        vertical-align: middle;
    }
</style>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Categoria</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>@producto.Stock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.Id" title="Editar" class="action-btn action-edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@producto.Id" title="Detalles" class="action-btn action-view">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@producto.Id" title="Eliminar" class="action-btn action-delete">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
