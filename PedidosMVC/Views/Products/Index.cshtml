@model IEnumerable<PedidosMVC.Models.Product>
@{
    ViewData["Title"] = "Productos";
}
<div class="container mt-4">
    <h1 class="mb-4">Productos</h1>
    <p>
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="fa fa-plus"></i> Nuevo Producto
        </a>
    </p>
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1" title="Editar">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1" title="Detalles">
                        <i class="fa fa-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Eliminar">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>