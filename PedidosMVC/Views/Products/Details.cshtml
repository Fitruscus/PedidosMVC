@model PedidosMVC.Models.Product
@{
    ViewData["Title"] = "Detalles del producto";
}
<h1>Detalles</h1>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Nombre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Nombre)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Precio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Precio)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Stock)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Stock)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
