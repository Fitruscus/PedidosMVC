@model IEnumerable<PedidosMVC.Models.Order>
@{
    ViewData["Title"] = "Pedidos";
}

<h1>Pedidos</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Producto(s)</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Cliente</td>
            <td>
                @if (item.OrderItems != null && item.OrderItems.Any())
                {
                    @string.Join(", ", item.OrderItems.Select(oi => oi.Product?.Nombre))
                }
            </td>
            <td>@item.Estado</td>
            <td>@item.Fecha.ToShortDateString()</td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar" aria-label="Editar">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Detalles" aria-label="Detalles">
                    <i class="fa-solid fa-eye"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar" aria-label="Eliminar">
                    <i class="fa-solid fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
