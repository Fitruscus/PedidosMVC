@model PedidosMVC.Models.Order
@{
    ViewData["Title"] = "Detalle de Pedido";
}
<h1>Detalle de Pedido</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>
    </dl>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
