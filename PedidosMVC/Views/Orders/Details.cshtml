@model PedidosMVC.Models.Order
@{
    ViewData["Title"] = "Detalles del pedido";
}
<h1>Detalles</h1>
<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Cliente)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Cliente)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Estado)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Estado)</dd>
