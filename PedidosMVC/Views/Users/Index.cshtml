@model IEnumerable<PedidosMVC.Models.User>
@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>
<table class="table table-striped">
