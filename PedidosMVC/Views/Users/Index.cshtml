            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@Html.DisplayFor(_ => item.Nombre)</td>
            <td>@Html.DisplayFor(_ => item.Email)</td>
