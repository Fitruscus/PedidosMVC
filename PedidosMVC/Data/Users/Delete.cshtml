@page
@model PedidosMVC.Views.Users.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1>Eliminar Usuario</h1>
<h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.User.Nombre</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.User.Email</dd>
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.User.Direccion</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="User.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
